
node('master') {
  def app
  stage('test stage') {
      println("test1") 
  }
  
  stage('Clone repository') {               
        checkout scm    
  }  
  
  stage("Build Image") {
    dir("CICD-exercise/") {
      app = docker.build("orm/nodejs-jenkins")
    }
  } 
  
  stage('Push image') {
    docker.withRegistry('localhost:5000') {                   
      app.push("latest")        
    }    
  }
}
